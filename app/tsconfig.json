{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["DOM", "ES6"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".", 
    "paths": {
      "@/components/*": ["frontend/static/react/components/*"],
      "@/const/*": ["frontend/static/react/const/*"],
      "@/ui/*": ["frontend/static/react/components/ui/*"],
      "@/hooks/*": ["frontend/static/react/hooks/*"]
    }
  },
  "include": ["frontend/**/*"],
  "exclude": ["node_modules", "build"]
}